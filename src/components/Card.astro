---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  imageUrl: string;
  altText: string;
}

const { title, description, imageUrl, altText } = Astro.props;
---

<div class="card">
  <Image src={imageUrl} alt={altText} width={300} height={200} />
  <div class="card-content">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
</div>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    max-width: 300px;
  }

  .card-content {
    padding: 16px;
  }

  h2 {
    margin-top: 0;
  }
</style>
